<h1>投稿一覧</h1>
<p><%= notice %></p>
<table>
  <tr>
    <th>タイトル</th>
    <th>内容</th>
    <th>画像</th>
    <th>ユーザー名</th>
  </tr>
  <% @pictures.each do |picture| %>
    <tr>
      <td><%= picture.title %></td>
      <td><%= picture.content %></td>
      <td><%= image_tag(picture.image.url) %></td>
      <td><%= picture.user.name %></td>
      <td><span class="link_btn"><%= link_to '詳細を確認する', picture_path(picture.id) %></span></td>
      <td><span class="link_btn"><%= link_to "投稿を編集する", edit_picture_path(picture.id) %></span></td>
      <td><span class="link_btn"><%= link_to '投稿を削除する', picture_path(picture.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %></span></td>
    </tr>
  <% end %>
</table>
<br>
<span class="link_btn"><%= link_to '投稿する', new_picture_path %></span>