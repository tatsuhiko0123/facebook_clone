<h1>新規アカウント作成</h1>
<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this <%= @user.name %> from being saved:</h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= form_with(model: @user, local: true) do |f| %>
  <p class="text"><%= f.label :名前 %></p>
  <p class="textarea"><%= f.text_field :name %></p>
  <p class="text"><%= f.label :email %></p>
  <p class="textarea"><%= f.email_field :email %></p>
  <p class="text"><%= f.label :パスワード %></p>
  <p class="textarea"><%= f.password_field :password %></p>
  <p class="text"><%= f.label :パスワード確認 %></p>
  <p class="textarea"><%= f.password_field :password_confirmation %></p>
  <%= f.submit "アカウント作成" %>
<% end %>